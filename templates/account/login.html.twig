{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center">Connexion au site</h2>
        {% if hasError %}
            <div class="alert alert-danger">
            Une erreur est survenue, l'dentifiant ou le mot de passe est invalide
            </div>
        {% endif %}
        <form action="{{ path("account_login")}}" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" class="form-control" name="_username" id="email" placeholder="Enter email" value"{{ username }}" required>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="_password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Connexion</button>
        </form>
    </div>
{% endblock %}
